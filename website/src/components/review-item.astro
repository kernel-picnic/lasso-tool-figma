---
import { Image } from 'astro:assets'
const { avatar, link, name, username } = Astro.props
---

<div class="review">
  <div class="text"><slot /></div>
  <a class="bottom-line" href={link} target="_blank" rel="noopener noreferrer">
    <Image src={avatar} class="avatar" alt={name} />
    <div class="userinfo">
      <div class="name">{name}</div>
      <div class="username">{username}</div>
    </div>
  </a>
</div>

<style>
  .review {
    border: 1px solid var(--figma-color-border);
    border-radius: var(--border-radius);
    text-align: left;
    display: flex;
    flex-direction: column;

    &:nth-child(2) {
      grid-column: 2/4;
    }

    &:nth-child(3) {
      grid-column: 1/3;
    }
  }

  .text {
    padding: 1.5rem;
    line-height: 1.6;
    height: 100%;
  }

  .bottom-line {
    border-top: 1px solid var(--figma-color-border);
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
  }

  .avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 2px solid var(--figma-color-text);
  }

  .userinfo {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .name {
    font-size: 0.9rem;
    color: var(--figma-color-text);
  }

  .username {
    font-size: 0.8rem;
    color: var(--figma-color-text-secondary);
  }

  .highlight {
    background-color: var(--figma-color-bg-selected);
    padding: 0 3px;
    border-radius: 4px;
  }
</style>
