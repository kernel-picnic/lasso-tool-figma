---
import { Image } from 'astro:assets'
import AppButton from '../components/app-button.astro'
import AppLogo from './app-logo.astro'
import figmaLogo from '../assets/figma-logo.svg'
---

<footer class="footer">
  <h2 class="title">Get started now</h2>
  <div class="subtitle">Try for free or buy forever for&nbsp;just&nbsp;$5</div>
  <AppButton
    className="button"
    href="https://www.figma.com/community/plugin/1362438745920118538"
    target="_blank"
    big
  >
    <Image src={figmaLogo} big class="button-image" alt="" />
    Install on Figma
  </AppButton>

  <nav class="nav">
    <div class="logo">
      <AppLogo />
    </div>
    <nav class="menu">
      <a href="mailto:hi@lasso.design" target="_blank">Support</a>
      <!-- TODO -->
      <!--<a href="#">Privacy</a>-->
      <!--<a href="#">Terms</a>-->
    </nav>
    <span class="author">
      Made by <a href="https://troynin.dev" target="_blank">Anton Troynin</a>
    </span>
  </nav>
</footer>

<style>
  .footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 50px;
    text-align: center;
  }

  .title {
    margin-bottom: 20px;
  }

  .subtitle {
    font-size: var(--subtitle-size);
    color: var(--figma-color-text-secondary);
    margin-bottom: 50px;
    line-height: 1.6;
  }

  .button {
    margin-bottom: var(--offset);
  }

  .button-image {
    width: 20px;
    height: 20px;
    filter: contrast(0) grayscale(1) brightness(10);
    margin-right: 10px;
  }

  .nav {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;

    @media screen and (max-width: 768px) {
      flex-direction: column;
      gap: 30px;
    }
  }

  .logo {
    opacity: 0.5;
  }

  .menu {
    display: flex;
    gap: 40px;

    a {
      color: var(--figma-color-text-secondary);
      text-decoration: none;
      font-size: 16px;

      &:hover {
        text-decoration: underline;
      }
    }
  }

  .author {
    font-size: 16px;
    color: var(--figma-color-text-secondary);

    a {
      color: var(--figma-color-text-secondary);
    }
  }
</style>
