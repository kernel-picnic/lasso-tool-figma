---
import { Image } from 'astro:assets'
import lassoStandard from '../assets/modes/standard-lasso.mov'
import lassoMagnetic from '../assets/modes/magnetic-lasso.mov'
import anyVectorExampleImage from '../assets/modes/any-vector.png'
---

<section id="features" class="modes">
  <h2 class="title">Various instruments</h2>
  <div class="description">
    Draw a freehand selection with three instruments.<br />
    Move your mouse and will create a selection along your cursor's path.
  </div>

  <ul class="list">
    <li class="item">
      <div class="name">Standard Lasso</div>
      <video src={lassoStandard} autoplay muted playsinline loop></video>
    </li>
    <li class="item">
      <div class="name">Magnetic Lasso</div>
      <video src={lassoMagnetic} autoplay muted playsinline loop></video>
    </li>
  </ul>

  <div class="any-vector">
    <div class="name">Or you can use any existing vector as a Lasso</div>
    <!-- Retina image -->
    <Image src={anyVectorExampleImage} alt="" />
  </div>

  <style>
    .modes {
      text-align: center;
      margin-bottom: var(--offset);
    }

    .title {
      margin-bottom: 30px;
    }

    .description {
      font-size: var(--subtitle-size);
      margin-bottom: 80px;
      line-height: 1.5;
      color: var(--figma-color-text-secondary);
    }

    .list {
      list-style: none;
      display: flex;
      gap: 50px;
      text-align: center;
      margin-bottom: 50px;

      @media screen and (max-width: 768px) {
        flex-direction: column;
      }
    }

    .item {
      width: 100%;

      video {
        width: 100%;
        border-radius: 30px;
        background-color: var(--figma-color-bg-secondary);
        aspect-ratio: 1 / 1;
      }
    }

    .name {
      font-size: 30px;
      letter-spacing: 0.3px;
      margin-bottom: 40px;

      @media screen and (max-width: 768px) {
        font-size: 26px;
        margin-bottom: 30px;
      }
    }

    .any-vector {
      background-color: var(--figma-color-bg-secondary);
      border-radius: 30px;
      padding: 50px;

      @media screen and (max-width: 768px) {
        background: none;
        padding: 0;
      }

      .name {
        margin-bottom: 50px;

        @media screen and (max-width: 768px) {
          margin-bottom: 30px;
        }
      }

      img {
        width: 100%;
        height: 100%;
        border-radius: 30px;

        @media screen and (max-width: 768px) {
          margin-bottom: 20px;
          border: 1px solid var(--figma-color-border);
        }
      }
    }
  </style>
</section>
