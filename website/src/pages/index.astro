---
import AppHeader from '../components/app-header.astro'
import AppHero from '../components/app-hero.astro'
import AppModes from '../components/app-modes.astro'
import AppActions from '../components/app-actions.astro'
import AppFooter from '../components/app-footer.astro'

const isProd = import.meta.env.PROD
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#000" />
    <title>Lasso Tool - Figma Plugin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Draw a freehand selection and copy or cut all layers within it in one click. Like in Photoshop!"
    />
    <meta
      name="keywords"
      content="figma, photoshop, lasso, tool, freehand, selection, copy, cut, magnetic, layers"
    />
    <meta property="og:title" content="Lasso Tool - Figma Plugin" />
    <meta property="og:type" content="website" />
    <meta name="og:image" content="/og-image.png" />
    <meta
      name="og:description"
      content="Draw a freehand selection and copy or cut all layers within it in one click. Like in Photoshop!"
    />

    {
      isProd && (
        <script
          defer
          src="https://analytics.eu.umami.is/script.js"
          data-website-id="2315de12-78f1-46d5-a253-77b1a2775223"
        />
      )
    }
  </head>
  <body>
    <div class="container">
      <AppHeader />
      <AppHero />
      <AppModes />
      <AppActions />
      <AppFooter />
    </div>
  </body>
</html>

<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');

  :root {
    --offset: 200px;
    --heading-1-size: 80px;
    --heading-2-size: 50px;
    --subtitle-size: 26px;
    --border-radius: 30px;

    @media (max-width: 768px) {
      --offset: 80px;
      --heading-1-size: 40px;
      --heading-2-size: 30px;
      --subtitle-size: 22px;
      --border-radius: 20px;
    }

    --figma-color-bg: #ffffff;
    --figma-color-bg-brand: #0d99ff;
    --figma-color-bg-brand-hover: #007be5;
    --figma-color-bg-brand-tertiary: #e5f4ff;
    --figma-color-bg-component: #9747ff;
    --figma-color-bg-danger: #f24822;
    --figma-color-bg-danger-tertiary: #ffe2e0;
    --figma-color-bg-hover: #f5f5f5;
    --figma-color-bg-inverse: #2c2c2c;
    --figma-color-bg-secondary: #f5f5f5;
    --figma-color-bg-success: #14ae5c;
    --figma-color-bg-success-tertiary: #cff7d3;
    --figma-color-bg-warning: #ffcd29;
    --figma-color-bg-warning-tertiary: #fff1c2;
    --figma-color-border: #e6e6e6;
    --figma-color-text: #000000e5;
    --figma-color-text-brand: #007be5;
    --figma-color-text-disabled: #0000004d;
    --figma-color-text-hover: #000000e5;
    --figma-color-text-onbrand: #ffffff;
    --figma-color-text-oninverse: #ffffffe5;
    --figma-color-text-onselected-secondary: #00000080;
    --figma-color-text-secondary: #00000080;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Inter, sans-serif;
  }

  html,
  body {
    font-size: 20px;

    @media (max-width: 768px) {
      font-size: 18px;
    }
  }

  a {
    color: var(--figma-color-text-brand);
    transition: color 0.1s ease;

    &:hover {
      color: var(--figma-color-bg-brand-hover);
    }
  }

  h1 {
    font-size: var(--heading-1-size);
  }

  h2 {
    font-size: var(--heading-2-size);
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
  }
</style>
